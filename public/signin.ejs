<html>

<head>
    <title>Web Chat-App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <link rel="icon" href="./img/favicon.png" />
</head>

<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Web Chat-App</a>
    <a class="btn btn-primary" href="/signup"> Sign Up </a>
</nav>

<body>
    <div class="container">
        <div id="wrapper">
            <div class="card text-center">
                <h5 class="card-header">LogIn</h5>
                <div class="card-body">
                    <img src="./img/profile-picture.png" height="134" width="134"><br><br>
                    <form action="/login" method="post">
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1"><i
                                        class="fas fa-envelope"></i></span></div>
                            <input class="form-control" name="email" type="email" placeholder="Email" id="email"
                                required maxlength="30">
                        </div><br>
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1"><i
                                        class="fas fa-lock"></i></span></div>
                            <input class="form-control" name="password" type="password" placeholder="Password"
                                id="password" required maxlength="30">
                        </div><br>
                        <button onclick="logIn()" action="logIn" class="btn btn-primary" type="submit" form="nameform"
                            value="Submit" style="width:100%;">LogIn</button>
                    </form>
                    <button onclick="forgotPassword()" action="forgotPassword" class="btn btn-primary" type="submit"
                        form="nameform" value="Submit" style="width:100%;">Forgot Password</button>
                </div>
            </div><br>
        </div>

        <script>
            function forgotPassword() {
                location.replace("http://localhost:3000/forgot")
            }
        </script>

        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script src="./javascripts/signin.js"></script>

</body>

</html>