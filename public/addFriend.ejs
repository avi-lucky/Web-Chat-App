<html>

<head>
    <title>Web Chat-App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css">
    <link rel="icon" href="./img/favicon.png" />
</head>

<nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Web Chat-App</a>
</nav>

<body>
    <div class="container">
        <div id="wrapper">
            <div class="card text-center">
                <h5 class="card-header">Add-Friend</h5>
                <div class="card-body">
                    <img src="./img/profile-picture.png" height="134" width="134"><br><br>
                    <form action="/register" method="post">
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1"><i
                                        class="fas fa-user"></i></span></div>
                            <input class="form-control" id="name" type="text" placeholder="Name" required
                                maxlength="30">
                        </div><br>
                        <button onclick="addFriend()" action="addFriend" class="btn btn-primary" type="submit"
                            form="nameform" value="Submit" style="width:100%;">Add User</button>
                    </form>
                </div>
            </div><br>
        </div>
        
    </body>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <!-- <script src="./utils/users.js" defer></script> -->

</html>